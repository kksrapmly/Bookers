<h1 class="edit_heaging"><strong>Editing Book</strong></h1>

	<!-- フォーム -->
	<%=form_for(@book) do |f| %>
	<% if @book.errors.any? %>
	<div class="error">
      <p class="error-headline"><%= @book.errors.count %> errors prohibited this book from being saved: </p>
      <ul class="error-text">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    </div>

	  <div class="field">
	  	<%= f.label :title, "Title" %> <br>
	    <%= f.text_field :title, class: "book_title" %>
	  </div>
	  <div class="field">
	  	<%= f.label :body, "Body" %> <br>
	    <%= f.text_area :body, class: "book_body" %>
	  </div>
      <div class="field">
      	<%= f.submit "Update Book" %>
      </div>
	<% end %>

	<!-- showとback -->
	<div class="button-color">
	  <%= link_to "Show",book_path(@book.id) ,class: "show_#{@book.id}"%>
	  <span> | </span>
      <%= link_to "Back",books_path ,class: "back" %>
    </div>