<div class="new">
  <h2>New book</h2>
  <%=form_for(@book) do |f| %>
    <% if @book.errors.any? %>
      <h3><%= @book.errors.count %> errors prohibited this book from being saved: </h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>


    <p>
      <%= f.label :title, "Title" %> <br>
      <%= f.text_field :title, class: "book_title" %>
    </p>
    <p>
      <%= f.label :body, "Body" %> <br>
      <%= f.text_area :body, class: "book_body" %>
    </p>
    <%= f.submit "Create Book" %>
  <% end %>
</div>

